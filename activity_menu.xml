<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#7ADCF5F8"
    tools:context="com.example.dk47.myapp.Menu">



    <ImageView
        android:layout_width="325dp"
        android:layout_height="325dp"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/wb"
        android:tint="#EBE1F8FB"
        android:nestedScrollingEnabled="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



    <include layout="@layout/toolbar"
        android:id="@+id/myToolbar" />
    

    <include layout="@layout/logout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton2"
        android:layout_marginTop="18dp"
        android:layout_marginRight="2dp"
        android:id="@+id/include5" />



    <include layout="@layout/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:layout_alignStart="@+id/menutext"
        android:id="@+id/back"
        />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="#00555555"
        android:src="@drawable/dot"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/wifi"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Menu"
        android:layout_marginLeft="20dp"
        android:id="@+id/menutext"
        android:textColor="#555555"
        android:textSize="30dp"
        android:layout_marginTop="34dp"
        android:layout_below="@id/myToolbar"
        android:layout_alignStart="@+id/name" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/torch"
        android:background="@drawable/button_state"
        android:text="Torch"
        android:shadowColor="#e20e0e"
        android:drawableLeft="@drawable/flash"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:textColor="#AC000000"
        android:layout_alignTop="@+id/calc"
        android:layout_alignStart="@+id/quiz"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calc"
        android:background="@drawable/button_state"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="200dp"
        android:text="Calculator"
        android:textSize="11dp"
        android:drawableLeft="@drawable/calci"
        android:paddingRight="9dp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/menutext"
        android:layout_alignStart="@+id/imageView"
        android:shadowColor="#e20e0e"
        android:textColor="#AC000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music"
        android:background="@drawable/button_state"
        android:text="Music"
        android:shadowColor="#e20e0e"
        android:drawableLeft="@drawable/dj"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:textColor="#AC000000"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/torch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wifi"
        android:background="@drawable/button_state"
        android:text="Wifi"
        android:drawableLeft="@drawable/wifi"
        android:paddingLeft="10dp"
        android:paddingRight="7dp"
        android:textSize="15dp"
        android:shadowColor="#e20e0e"
        android:textColor="#AC000000"
        android:textStyle="bold"
        android:layout_alignStart="@+id/calc"
        android:layout_alignTop="@+id/music" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt"
        android:background="@drawable/button_state"
        android:text="BT"
        android:textSize="18dp"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/bt"
        android:shadowColor="#e20e0e"
        android:textColor="#AC000000"
        android:textStyle="bold"
        android:layout_below="@+id/music"
        android:layout_alignStart="@+id/music"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera"
        android:background="@drawable/button_state"
        android:text="Camera"
        android:textSize="12dp"
        android:drawableLeft="@drawable/camera"
        android:paddingLeft="7dp"
        android:shadowColor="#e20e0e"
        android:paddingRight="8dp"
        android:textColor="#AC000000"
        android:textStyle="bold"
        android:layout_alignTop="@+id/bt"
        android:layout_alignStart="@+id/wifi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quiz"
        android:background="@drawable/button_state"
        android:text="Quiz time"
        android:textSize="13dp"
        android:drawableLeft="@drawable/pen"
        android:paddingLeft="5dp"
        android:paddingRight="9dp"
        android:shadowColor="#e20e0e"
        android:textColor="#AC000000"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/back" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sos"
        android:background="@drawable/button_state"
        android:drawableLeft="@drawable/sos"
        android:paddingLeft="8dp"
        android:text="SOS"
        android:textSize="15dp"
        android:shadowColor="#e20e0e"
        android:textColor="#AC000000"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/camera"
        android:textStyle="bold"/>




</RelativeLayout>
